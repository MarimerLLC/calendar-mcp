@using CalendarMcp.Core.Models

<div class="card account-card mb-3">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h5 class="card-title mb-1">
                    <i class="bi @GetProviderIcon(Account.Provider) me-2"></i>
                    @Account.DisplayName
                </h5>
                <p class="text-muted mb-1 small">@Account.Id</p>
                @if (Account.Domains.Any())
                {
                    <p class="text-muted mb-0 small">
                        <i class="bi bi-globe me-1"></i>
                        @string.Join(", ", Account.Domains)
                    </p>
                }
            </div>
            <div class="text-end">
                @if (!Account.Enabled)
                {
                    <span class="badge bg-secondary status-badge">Disabled</span>
                }
                else if (!AuthRequired)
                {
                    @if (!string.IsNullOrEmpty(AuthDelegateAccountId))
                    {
                        <span class="badge bg-secondary status-badge" title="Authentication delegated to another account">
                            <i class="bi bi-link-45deg me-1"></i>Auth via @AuthDelegateAccountId
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary status-badge">
                            <i class="bi bi-dash-circle me-1"></i>No Auth Required
                        </span>
                    }
                }
                else if (FlowStatus == "awaiting_user" || FlowStatus == "pending")
                {
                    <span class="badge bg-warning text-dark status-badge pulse-animation">
                        <i class="bi bi-hourglass-split me-1"></i>Auth In Progress
                    </span>
                }
                else if (IsAuthenticated)
                {
                    <span class="badge bg-success status-badge">
                        <i class="bi bi-check-circle me-1"></i>Authenticated
                    </span>
                }
                else
                {
                    <span class="badge bg-danger status-badge">
                        <i class="bi bi-x-circle me-1"></i>Not Authenticated
                    </span>
                }
            </div>
        </div>
        <div class="mt-3 d-flex flex-wrap align-items-center gap-2">
            <span class="badge bg-info text-dark">@Account.Provider</span>
            <div class="btn-group btn-group-sm">
                @if (Account.Enabled && AuthRequired)
                {
                    <a href="/admin/ui/auth/@Account.Id" class="btn btn-outline-primary" title="Authenticate">
                        <i class="bi bi-key"></i>
                    </a>
                }
                <a href="/admin/ui/accounts/@Account.Id/edit" class="btn btn-outline-secondary" title="Edit">
                    <i class="bi bi-pencil"></i>
                </a>
                @if (IsAuthenticated && AuthRequired)
                {
                    <button class="btn btn-outline-warning" title="Logout" @onclick="HandleLogout" disabled="@_loggingOut">
                        @if (_loggingOut)
                        {
                            <span class="spinner-border spinner-border-sm" role="status"></span>
                        }
                        else
                        {
                            <i class="bi bi-box-arrow-right"></i>
                        }
                    </button>
                }
                <a href="/admin/ui/accounts/@Account.Id/delete" class="btn btn-outline-danger" title="Delete">
                    <i class="bi bi-trash"></i>
                </a>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public required AccountInfo Account { get; set; }

    [Parameter]
    public bool IsAuthenticated { get; set; }

    [Parameter]
    public bool AuthRequired { get; set; } = true;

    [Parameter]
    public string? AuthDelegateAccountId { get; set; }

    [Parameter]
    public string? FlowStatus { get; set; }

    [Parameter]
    public EventCallback<string> OnLogout { get; set; }

    private bool _loggingOut;

    private async Task HandleLogout()
    {
        _loggingOut = true;
        await OnLogout.InvokeAsync(Account.Id);
        _loggingOut = false;
    }

    private static string GetProviderIcon(string provider) => provider.ToLowerInvariant() switch
    {
        "microsoft365" or "m365" or "outlook" or "outlook.com" or "hotmail" => "bi-microsoft",
        "google" or "gmail" or "google workspace" => "bi-google",
        "ics" => "bi-calendar-event",
        "json" => "bi-filetype-json",
        _ => "bi-envelope"
    };
}
