@using CalendarMcp.Core.Models

<div class="card account-card mb-3">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h5 class="card-title mb-1">
                    <i class="bi @GetProviderIcon(Account.Provider) me-2"></i>
                    @Account.DisplayName
                </h5>
                <p class="text-muted mb-1 small">@Account.Id</p>
                @if (Account.Domains.Any())
                {
                    <p class="text-muted mb-0 small">
                        <i class="bi bi-globe me-1"></i>
                        @string.Join(", ", Account.Domains)
                    </p>
                }
            </div>
            <div class="text-end">
                @if (!Account.Enabled)
                {
                    <span class="badge bg-secondary status-badge">Disabled</span>
                }
                else if (FlowStatus == "awaiting_user" || FlowStatus == "pending")
                {
                    <span class="badge bg-warning text-dark status-badge pulse-animation">
                        <i class="bi bi-hourglass-split me-1"></i>Auth In Progress
                    </span>
                }
                else if (IsAuthenticated)
                {
                    <span class="badge bg-success status-badge">
                        <i class="bi bi-check-circle me-1"></i>Authenticated
                    </span>
                }
                else
                {
                    <span class="badge bg-danger status-badge">
                        <i class="bi bi-x-circle me-1"></i>Not Authenticated
                    </span>
                }
            </div>
        </div>
        <div class="mt-3">
            <span class="badge bg-info text-dark me-2">@Account.Provider</span>
            @if (Account.Enabled)
            {
                <a href="/admin/ui/auth/@Account.Id" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-key me-1"></i>Authenticate
                </a>
            }
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public required AccountInfo Account { get; set; }

    [Parameter]
    public bool IsAuthenticated { get; set; }

    [Parameter]
    public string? FlowStatus { get; set; }

    private static string GetProviderIcon(string provider) => provider.ToLowerInvariant() switch
    {
        "microsoft365" or "m365" or "outlook" or "outlook.com" or "hotmail" => "bi-microsoft",
        "google" or "gmail" or "google workspace" => "bi-google",
        _ => "bi-envelope"
    };
}
