<div class="text-center my-4">
    <p class="text-muted mb-2">Enter this code at the verification URL:</p>
    <div class="device-code-display mb-3">@UserCode</div>
    <p class="mb-1">
        <a href="@VerificationUrl" target="_blank" rel="noopener noreferrer" class="btn btn-primary">
            <i class="bi bi-box-arrow-up-right me-1"></i>Open @VerificationUrl
        </a>
    </p>
    <p class="text-muted small mt-2">
        <i class="bi bi-info-circle me-1"></i>
        Open the link above in a browser, then paste the code to sign in.
    </p>
</div>

@code {
    [Parameter, EditorRequired]
    public required string UserCode { get; set; }

    [Parameter, EditorRequired]
    public required string VerificationUrl { get; set; }
}
